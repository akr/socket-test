CC = @CC@
CFLAGS = @CFLAGS@
CPPFLAGS = @CPPFLAGS@
LDFLAGS = @LDFLAGS@
LDLIBS = @LIBS@

TARGETS = size unix-stream
UTILOBJS = util.o errsym.o

all: $(TARGETS)

clean:
	rm -f $(TARGETS) *.o

size: size.o
	$(CC) $(LDFLAGS) size.o $(LDLIBS) -o $@

unix-stream: unix-stream.o $(UTILOBJS)
	$(CC) $(LDFLAGS) unix-stream.o $(UTILOBJS) $(LDLIBS) -o $@

size: size.c
unix-stream: unix-stream.o $(UTILOBJS)

unix-stream.o: unix-stream.c sockettest.h config.h
util.o: util.c sockettest.h config.h

errsym.o: errsym.c
errsym.c: errsym.erb
	erb errsym.erb > errsym.c

results.html : table-result.erb \
  results/linux.txt \
  results/freebsd.txt \
  results/netbsd.txt \
  results/openbsd.txt \
  results/sunos.txt \
  results/cygwin.txt
	erb table-result.erb > results.html
